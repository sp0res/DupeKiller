{
  "manifest_version": 3,
  "name": "DupeKiller",
  "version": "1.0",
  "description": "Close duplicate tabs (same URL) across all currently opened windows of the browser.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "DupeKiller"
  },
  "permissions": [
    "tabs",
    "windows",
    "storage"  
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
