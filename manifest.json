{
  "manifest_version": 3,
  "name": "Close Duplicate Tabs",
  "version": "1.0",
  "description": "Close duplicate tabs across all windows.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Close Duplicate Tabs"
  },
  "permissions": [
    "tabs",
    "windows",
    "storage"  
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
