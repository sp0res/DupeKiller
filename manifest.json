{
    "manifest_version": 2,
    "name": "Close Duplicate Tabs",
    "version": "0.1",
    "description": "Closes duplicate tabs across all windows.",
    "permissions": [
      "tabs",
      "windows",
      "activeTab"
    ],
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
  